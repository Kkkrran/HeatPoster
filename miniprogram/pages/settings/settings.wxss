page {
  height: 100vh;
}

.page {
  min-height: 100vh;
  background: #f3f5f7;
}

.header {
  padding: 32rpx 32rpx 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2329;
}

.subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #5f6b7a;
}

.section {
  padding: 0 32rpx 16rpx;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  border: 1px solid #e7e9ee;
  padding: 24rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2329;
}

.card-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #5f6b7a;
}

.em {
  font-weight: 600;
  color: #0052d9;
}

.card-actions {
  margin-top: 16rpx;
  display: flex;
  gap: 16rpx;
}

.about-grid {
  margin-top: 16rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.about-item {
  border-radius: 20rpx;
  border: 1px solid #e7e9ee;
  padding: 20rpx;
}

.about-k {
  font-size: 24rpx;
  color: #1f2329;
  font-weight: 600;
}

.about-v {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #5f6b7a;
}

.footer-tip {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #5f6b7a;
}

.bottom {
  padding: 16rpx 32rpx 32rpx;
}

/* 蓝牙相关样式 */
.connection-status {
  margin-top: 16rpx;
  padding: 12rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-label {
  font-size: 24rpx;
  color: #5f6b7a;
}

.status-value {
  font-size: 24rpx;
  color: #007aff;
  font-weight: 500;
}

/* 设备列表弹窗样式 */
.sheet {
  width: 100%;
  background-color: #ffffff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.grabber {
  width: 64rpx;
  height: 8rpx;
  background-color: #e7e9ee;
  border-radius: 4rpx;
  margin: 0 auto 24rpx;
}

.sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.sheet-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2329;
}

.sheet-subtitle {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #5f6b7a;
}

.device-list {
  max-height: 500rpx;
  overflow-y: auto;
  margin-bottom: 24rpx;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #e7e9ee;
  cursor: pointer;
  transition: background-color 0.2s;
}

.device-item:active {
  background-color: #f5f7fa;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 28rpx;
  color: #1f2329;
  margin-bottom: 4rpx;
}

.device-id {
  font-size: 20rpx;
  color: #86909c;
  word-break: break-all;
  margin-top: 4rpx;
}

.device-status {
  display: flex;
  align-items: center;
}

.no-devices {
  text-align: center;
  padding: 60rpx 0;
  font-size: 24rpx;
  color: #86909c;
}

.popup-footer {
  margin-top: 16rpx;
}
