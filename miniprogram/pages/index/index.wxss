/** 作品库页样式（TDesign 组件为主，少量布局补充） **/

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f3f5f7;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 16rpx;
}

.header-actions {
  display: flex;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2329;
}

.subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #5f6b7a;
}

.tip-card {
  margin: 0 32rpx 16rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  border: 1px solid #e7e9ee;
  position: relative;
}

.tip-title { font-size: 28rpx; font-weight: 600; color: #1f2329; }
.tip-text { margin-top: 8rpx; font-size: 24rpx; color: #5f6b7a; }
.tip-tag { position: absolute; right: 24rpx; top: 24rpx; }

.list {
  flex: 1;
  padding: 0 24rpx;
}

.cell-note { display: flex; align-items: center; }

.empty-wrap {
  padding-top: 120rpx;
}

.footer-space {
  height: 160rpx;
}

.bottom-bar {
  padding: 0 32rpx 32rpx;
}
