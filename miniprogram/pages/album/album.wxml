<!-- 作品相册页 -->
<view class="page">
  <view class="header">
    <view class="title">作品相册</view>
    <view class="subtitle">查看所有作品</view>
  </view>

  <scroll-view class="content" scroll-y>
    <view class="grid" wx:if="{{artworks.length > 0}}">
      <view class="grid-item" wx:for="{{artworks}}" wx:key="id">
        <view class="image-wrapper" style="{{item.aspectRatio ? 'padding-bottom: ' + (100 / item.aspectRatio) + '%' : 'padding-bottom: 100%'}}">
          <image class="artwork-image" src="{{item.tempFilePath}}" mode="aspectFill" lazy-load></image>
        </view>
      </view>
    </view>
    <view class="empty-wrap" wx:else>
      <t-empty description="暂无作品" />
    </view>
  </scroll-view>
</view>



