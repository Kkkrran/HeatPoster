<!-- 作品相册页 -->
<view class="page">
  <view class="custom-nav" style="padding-top: {{paddingTop}}px">
    <view class="back-btn" bindtap="goBack">
      <t-icon name="chevron-left" size="12rpx" />
    </view>
  </view>

  <scroll-view 
    class="content" 
    scroll-y 
    scroll-top="{{scrollTop}}"
    bindscroll="onScroll"
    bindscrolltolower="onScrollToLower"
    bindtouchstart="onTouchStart"
    bindtouchend="onTouchEnd"
    style="opacity: {{contentOpacity}}; transition: opacity 0.5s ease;"
  >
    <view class="grid" wx:if="{{artworks.length > 0}}">
      <view class="grid-item" wx:for="{{artworks}}" wx:key="id">
        <view class="image-wrapper">
          <image class="artwork-image" src="{{item.tempFilePath}}" mode="aspectFill" lazy-load></image>
        </view>
      </view>
    </view>
    <view class="empty-wrap" wx:else>
      <t-empty description="暂无作品" />
    </view>
  </scroll-view>
</view>



