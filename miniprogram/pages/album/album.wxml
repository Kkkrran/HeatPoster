<!-- 作品相册页 -->
<wxs module="scroll" src="./scroll.wxs"></wxs>
<view class="page">
<!--
  <view class="custom-nav" style="padding-top: {{paddingTop}}px">
    <view class="back-btn" bindtap="goBack">
      <t-icon name="chevron-left" size="12rpx" />
    </view>
  </view>
-->

  <!-- 
    Prop Observer 绑定：
    scrollState change -> scroll.startScroll
    clearTransformTrigger change -> scroll.clearTransformObserver
  -->
  <view style="display: none;" 
    change:prop="{{scroll.startScroll}}" prop="{{scrollState}}" 
    data-dummy=""
  ></view>
  <view style="display: none;" 
    change:prop="{{scroll.clearTransformObserver}}" prop="{{clearTransformTrigger}}"
  ></view>

  <scroll-view 
    class="content" 
    scroll-y 
    style="height:{{height-50}}px;" 
    scroll-top="{{scrollTop}}"
    bindtouchstart="{{scroll.touchStart}}"
    bindtouchend="onScrollTouchEnd"
    bindscrolltoupper="onScrollTouch"
    bindscroll="onScrollTouch"
  >
    <view class="grid" wx:if="{{artworks.length > 0}}" style="opacity: {{contentOpacity}}; transition: opacity 0.5s ease;">
      <view class="grid-item" wx:for="{{artworks}}" wx:key="id">
        <view class="image-wrapper">
          <image class="artwork-image" src="{{item.tempFilePath}}" mode="aspectFill" lazy-load></image>
        </view>
      </view>
    </view>
    <view class="empty-wrap" wx:else>
      <t-empty description="暂无作品" />
    </view>
  </scroll-view>
</view>



