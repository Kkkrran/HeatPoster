page {
  height: 100vh;
}

.page {
  min-height: 100vh;
  background: #f3f5f7;
  display: flex;
  flex-direction: column;
}

/* 移除强制 16:9 的媒体查询 */

.header {
  padding: 32rpx 32rpx 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2329;
}

.subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #5f6b7a;
}

.content {
  padding: 0 10vw 32rpx; /* 使用 padding 来控制两侧留白，更自然适应不同屏幕 */
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  padding-top: 16rpx;
  /* 移除固定宽度和 margin-auto，让 grid 自然填充 content 区域 */
}

.grid-item {
  position: relative;
  overflow: hidden;
  background: #ffffff;
  border-radius: 8rpx;
}

.image-wrapper {
  width: 100%;
  padding-bottom: 133.33%; /* 3:4 ratio */
  position: relative;
  overflow: hidden;
}

.custom-nav {
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  height: 44px; /* standard nav bar height approx */
}

.artwork-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.empty-wrap {
  padding-top: 120rpx;
}



