page {
  background-color: #000;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.page {
  width: 100vw;
  height: 56.25vw; /* 16:9 ratio (H = W * 9/16) */
  background: #f3f5f7;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

@media (min-aspect-ratio: 16/9) {
  .page {
    height: 100vh;
    width: 177.78vh; /* 16:9 ratio (W = H * 16/9) */
  }
}

.header {
  padding: 32rpx 32rpx 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2329;
}

.subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #5f6b7a;
}

.content {
  flex: 1;
  width: 100%;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  width: 80%; /* Adjust width to fit height within 16:9 aspect */
  margin: 0 auto;
}

.grid-item {
  position: relative;
  overflow: hidden;
  background: #ffffff;
  border-radius: 8rpx;
}

.image-wrapper {
  width: 100%;
  padding-bottom: 133.33%; /* 3:4 ratio */
  position: relative;
  overflow: hidden;
}

.custom-nav {
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  height: 44px; /* standard nav bar height approx */
}

.artwork-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.empty-wrap {
  padding-top: 120rpx;
}



