page {
  height: 100vh;
}

.page {
  min-height: 100vh;
  background: #f3f5f7;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 32rpx 32rpx 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2329;
}

.subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #5f6b7a;
}

.content {
  flex: 1;
  padding: 0 16rpx 32rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rpx;
  padding-top: 16rpx;
}

.grid-item {
  position: relative;
  overflow: hidden;
  background: #ffffff;
}

.image-wrapper {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.custom-nav {
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  height: 44px; /* standard nav bar height approx */
}

.artwork-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.empty-wrap {
  padding-top: 120rpx;
}



