page {
  height: 100vh;
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f3f5f7;
}

.canvas-wrap {
  flex: 1;
  position: relative;
  padding: 0 24rpx 24rpx;
  overflow: hidden;
}

.canvas-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.canvas-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

.canvas-bg.permanent-bg {
  z-index: 0;
}

.canvas-bg.temp-bg {
  z-index: 0.5;
}

.canvas {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: #ffffff;
  border: 1px solid #e7e9ee;
  position: relative;
  z-index: 1;
}

.canvas.transparent {
  background: transparent;
}

.canvas.hidden {
  display: none;
}

.canvas-snapshot {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: #ffffff;
  border: 1px solid #e7e9ee;
  display: block;
  position: relative;
  z-index: 2;
}

.top-bar {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  background: #f3f5f7;
  z-index: 10;
}

.top-left, .top-right {
  display: flex;
  gap: 20rpx;
}

.circle-btn {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid #e7e9ee;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #1f2329;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.rect-btn {
  background: #ffffff;
  border-radius: 8rpx;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.rect-btn.primary {
  background: #0052d9;
  color: #ffffff;
}

/* 二维码弹出层样式 */
.qrcode-popup {
  position: absolute;
  top: 120%;  /* 按钮下方 */
  right: 0;
  width: 240rpx;
  background: #ffffff;
  padding: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1001; /* 比 mask 高 */
}

.qrcode-popup::before {
  content: '';
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid #ffffff;
}

.qrcode-img {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.qrcode-tip {
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: center;
}

/* 全局点击遮罩 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999; /* 覆盖页面内容，但在 二维码 下方 */
  background: transparent;
}

.sheet {
  background: #ffffff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding-bottom: 32rpx;
}

.grabber {
  width: 96rpx;
  height: 10rpx;
  border-radius: 999px;
  background: rgba(95, 107, 122, 0.22);
  margin: 20rpx auto 12rpx;
}

.sheet-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx 16rpx;
}

.sheet-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2329;
}

.tool-row {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx;
}

.slider-row {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 32rpx 0;
}

.slider-card {
  flex: 1;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

.slider-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.slider-header .label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2329;
}

.slider-header .value {
  font-size: 26rpx;
  font-weight: 500;
  color: #0052d9;
}

.slider-vertical-box {
  height: 420rpx;
  display: flex;
  justify-content: center;
  padding-bottom: 10rpx;
  --td-slider-dot-size: 81rpx;
}
