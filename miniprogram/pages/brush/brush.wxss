page {
  height: 100vh;
  background: #f3f5f7;
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  width: 85%;
  margin: 0 auto;
}

.canvas-wrap {
  flex: 1;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.canvas-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.canvas-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

.canvas-bg.permanent-bg {
  z-index: 0;
}

.canvas-bg.temp-bg {
  z-index: 0.5;
}

.canvas {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: #ffffff;
  border: 1px solid #e7e9ee;
  position: relative;
  z-index: 1;
}

.canvas.transparent {
  background: transparent;
}

.canvas.hidden {
  display: none;
}

.canvas-snapshot {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: #ffffff;
  border: 1px solid #e7e9ee;
  display: block;
  position: relative;
  z-index: 2;
}

.top-bar {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  background: #f3f5f7;
  z-index: 10;
}

.top-left, .top-right {
  display: flex;
  gap: 20rpx;
}

.circle-btn {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid #e7e9ee;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #1f2329;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

/* 定制左侧撤销重做按钮为圆形图标按钮 */
.top-left .circle-btn {
  padding: 0;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
}

.rect-btn {
  background: #ffffff;
  border-radius: 8rpx;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.rect-btn.primary {
  background: #000000;
  color: #ffffff;
}

/* 二维码弹出层样式 */
.qrcode-popup {
  position: absolute;
  top: 120%;  /* 按钮下方 */
  right: 0;
  width: 240rpx;
  background: #ffffff;
  padding: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1001; /* 比 mask 高 */
}

.qrcode-popup::before {
  content: '';
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid #ffffff;
}

.qrcode-img {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.qrcode-tip {
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: center;
}

/* 全局点击遮罩 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 999; /* 覆盖页面内容，但在 二维码 下方 */
  background: transparent;
}

.sheet {
  background: #ffffff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding-bottom: 32rpx;
}

.grabber {
  width: 96rpx;
  height: 10rpx;
  border-radius: 999px;
  background: rgba(95, 107, 122, 0.22);
  margin: 20rpx auto 12rpx;
}

.sheet-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx 16rpx;
  --td-button-danger-bg-color: #000000;
  --td-button-danger-border-color: #000000;
  --td-button-danger-active-bg-color: #333333;
  --td-button-danger-active-border-color: #333333;
}

.sheet-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2329;
}

.tool-row {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx;
}

.slider-row {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 32rpx 0;
}

.slider-card {
  flex: 1;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

.slider-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.slider-header .label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2329;
}

.slider-header .value {
  font-size: 26rpx;
  font-weight: 500;
  color: #000000;
}

.slider-vertical-box {
  height: 420rpx;
  display: flex;
  justify-content: center;
  padding-bottom: 10rpx;
  --td-slider-dot-size: 81rpx;
  --td-slider-active-color: #000000;
  --td-brand-color: #000000;
}

/* 打印参数设置弹窗样式 */
.print-settings-content {
  max-height: 60vh;
  overflow-y: auto;
  padding: 0 32rpx;
}

.setting-group {
  margin-bottom: 32rpx;
}

.setting-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2329;
  margin-bottom: 16rpx;
}

.setting-row {
  display: flex;
  gap: 16rpx;
}

.setting-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.setting-item-label {
  font-size: 24rpx;
  color: #5f6b7a;
}

.slider-horizontal-box {
  display: flex;
  align-items: center;
  gap: 16rpx;
  --td-slider-active-color: #000000;
  --td-brand-color: #000000;
}

.slider-horizontal-box t-slider {
  flex: 1;
}

.slider-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #000000;
  min-width: 60rpx;
  text-align: right;
}

.rotate-option,
.paper-type-option {
  flex: 1;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  border: 1px solid #e7e9ee;
  background: #ffffff;
  text-align: center;
  font-size: 26rpx;
  color: #1f2329;
  transition: all 0.2s;
}

.rotate-option.active,
.paper-type-option.active {
  background: #000000;
  color: #ffffff;
  border-color: #000000;
}

.popup-footer {
  border-top: 1px solid #e7e9ee;
  padding: 24rpx 32rpx;
}

.footer-buttons {
  display: flex;
  gap: 16rpx;
}

.footer-buttons t-button {
  flex: 1;
}

.sheet-subtitle {
  font-size: 24rpx;
  color: #5f6b7a;
  margin-top: 8rpx;
}

.disabled {
  opacity: 0.5;
  pointer-events: none;
}