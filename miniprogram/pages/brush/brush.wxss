page {
  height: 100vh;
  overflow: hidden;
  background-color: #f2e0ba; /* 毛笔纸色 */
}

.container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.canvas-wrap {
  width: 100%;
  height: 100%;
}

.brush-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

.brush-canvas-snapshot {
  width: 100%;
  height: 100%;
  display: block;
}

.toggle-tools {
  position: absolute;
  right: 40rpx;
  bottom: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 24rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.15);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
}

.toolbar {
  background: white;
  padding: 40rpx 30rpx;
  border-radius: 24rpx 24rpx 0 0;
}

.tool-section {
  margin-bottom: 40rpx;
}

.label {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.tool-actions {
  display: flex;
  gap: 24rpx;
}

.tool-actions t-button {
  flex: 1;
}
