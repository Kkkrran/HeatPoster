page {
  height: 100vh;
}

.page {
  min-height: 100vh;
  background: #f3f5f7;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 32rpx 32rpx 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2329;
}

.subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #5f6b7a;
}

.content {
  flex: 1;
  padding: 0 32rpx 32rpx;
}

.grid {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding-top: 16rpx;
}

.grid-item {
  background: #ffffff;
  border-radius: 24rpx;
  border: 1px solid #e7e9ee;
  overflow: hidden;
  position: relative;
  width: 70%;
  max-width: 70%;
}

.bg-image-wrapper {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  object-fit: contain;
}

.bg-label {
  padding: 16rpx;
  font-size: 24rpx;
  color: #1f2329;
  text-align: center;
  font-weight: 500;
}

.empty-wrap {
  padding-top: 120rpx;
}

.no-bg-item {
  border-style: dashed;
}

.no-bg-wrapper {
  padding-bottom: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f5f7;
}

.no-bg-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 28rpx;
  color: #5f6b7a;
  font-weight: 500;
}

