page {
  height: 100vh;
  background: #000;
  display: flex;
  flex-direction: column;
}

.page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.cropper-container {
  flex: 1;
  position: relative;
  overflow: hidden;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cropper-area {
  width: 100%;
  height: 100%;
  background: #000;
}

.cropper-view {
  /* 初始大小，会在 JS 中动态设置 */
}

.cropper-image {
  display: block;
}

/* 取景框层样式 */
.crop-box-area {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.crop-box-view {
  /* 初始大小，会在 JS 中动态设置 */
  box-shadow: 0 0 0 4000px rgba(0, 0, 0, 0.6);
}

.crop-box-inner {
  width: 100%;
  height: 100%;
  border: 2px solid #fff;
  box-sizing: border-box;
}

.footer {
  padding: 30rpx;
  background: #1f2329;
  padding-bottom: env(safe-area-inset-bottom);
}

.btn-group {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.btn-group t-button {
  flex: 1;
}
