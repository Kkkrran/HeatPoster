page {
  height: 100vh;
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f3f5f7;
}

.canvas-wrap {
  flex: 1;
  position: relative;
  padding: 24rpx;
}

.canvas {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: #ffffff;
  border: 1px solid #e7e9ee;
  /* 确保画布层级低于工具面板 */
  position: relative;
  z-index: 1;
}

.tool-fab {
  position: absolute;
  left: 24rpx;
  bottom: 24rpx;
  width: 104rpx;
  height: 104rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1px solid #e7e9ee;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  z-index: 10;
}

.tool-triangle {
  width: 0;
  height: 0;
  border-top: 28rpx solid transparent;
  border-bottom: 28rpx solid transparent;
  border-left: 36rpx solid #0052d9;
}

.tool-hint {
  position: absolute;
  left: 148rpx;
  bottom: 46rpx;
  padding: 10rpx 16rpx;
  font-size: 22rpx;
  color: #5f6b7a;
  background: rgba(255, 255, 255, 0.92);
  border: 1px solid #e7e9ee;
  border-radius: 999px;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
}

.sheet {
  background: #ffffff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding-bottom: 32rpx;
}

.grabber {
  width: 96rpx;
  height: 10rpx;
  border-radius: 999px;
  background: rgba(95, 107, 122, 0.22);
  margin: 20rpx auto 12rpx;
}

.sheet-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx 16rpx;
}

.sheet-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f2329;
}

.sheet-subtitle {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #5f6b7a;
}

.tool-row {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx;
}

.tool-row t-button {
  flex: 1;
}

.panel {
  margin: 20rpx 32rpx 0;
  padding: 24rpx;
  border-radius: 24rpx;
  border: 1px solid #e7e9ee;
  background: #ffffff;
}

.panel-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2329;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.panel-value {
  font-size: 24rpx;
  font-weight: 500;
  color: #5f6b7a;
}

.panel-hint {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #5f6b7a;
}

.panel-tip {
  border-style: dashed;
}
