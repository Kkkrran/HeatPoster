<!-- 绘画编辑页（TDesign Weixin） -->
<view class="page">
  <!-- 顶部操作栏 -->
  <view class="top-bar">
    <view class="top-left">
      <view class="circle-btn {{!canUndo ? 'disabled' : ''}}" bindtap="onUndo">撤回</view>
      <view class="circle-btn {{!canRedo ? 'disabled' : ''}}" bindtap="onRedo">重做</view>
    </view>
    
    <view class="circle-btn" bindtap="openTools">工具</view>

    <view class="top-right">
      <view class="rect-btn primary" bindtap="onSave">保存</view>
    </view>
  </view>

  <view class="canvas-wrap">
    <view class="canvas-container">
      <!-- 背景图 -->
      <image 
        wx:if="{{backgroundImage}}" 
        src="{{backgroundImage}}" 
        class="canvas-bg" 
        mode="scaleToFill"
      ></image>

      <!-- 原型阶段：先用 canvas 占位；真实绘制逻辑后续补齐 -->
      <canvas 
        type="2d" 
        id="paintCanvas" 
        class="canvas {{backgroundImage ? 'transparent' : ''}}"
        hidden="{{isCanvasHidden}}"
        bindtouchstart="onTouchStart"
        bindtouchmove="onTouchMove"
        bindtouchend="onTouchEnd"
        bindtouchcancel="onTouchEnd"
      ></canvas>
      
      <!-- 快照图片，用于在打开工具面板时替代 Canvas，避免原生组件遮挡 -->
      <image 
        wx:if="{{isCanvasHidden}}" 
        src="{{snapshotUrl}}" 
        class="canvas-snapshot" 
        mode="scaleToFill"
      ></image>
    </view>
  </view>

  <!-- 隐藏的打印Canvas -->
  <canvas 
    type="2d" 
    id="printCanvas" 
    style="position: fixed; top: -9999px; width: 1px; height: 1px;"
  ></canvas>

  <t-popup visible="{{toolsVisible}}" placement="bottom" bind:visible-change="onToolsVisibleChange">
    <view class="sheet">
      <view class="grabber"></view>
      <view class="sheet-header">
        <view>
          <view class="sheet-title">工具与设置</view>
          <view class="sheet-subtitle">缩小占用，画布更大</view>
        </view>
        <t-button theme="danger" variant="base" size="small" bindtap="onClear">清空画布</t-button>
      </view>

      <view class="tool-row" style="padding: 0 32rpx; margin-top: 20rpx;">
        <t-button theme="primary" variant="outline" block bindtap="onImportBackground">导入临时背景图</t-button>
      </view>

      <view class="tool-row" style="padding: 0 32rpx; margin-top: 20rpx;">
        <t-button theme="primary" block bindtap="onPrint">打印作品</t-button>
      </view>

      <view class="slider-row">
        <view class="slider-card">
          <view class="slider-header">
            <text class="label">画笔半径</text>
            <text class="value">{{brushRadius}}</text>
          </view>
          <view class="slider-vertical-box">
            <t-slider vertical value="{{brushRadius}}" min="6" max="60" step="1" bind:change="onBrushRadiusChange" />
          </view>
        </view>

        <view class="slider-card">
          <view class="slider-header">
            <text class="label">增热速率</text>
            <text class="value">{{heatRate}}</text>
          </view>
          <view class="slider-vertical-box">
            <t-slider vertical value="{{heatRate}}" min="0.2" max="3" step="0.1" bind:change="onHeatRateChange" />
          </view>
        </view>
      </view>

    </view>
  </t-popup>

  <t-toast id="t-toast" />
</view>
